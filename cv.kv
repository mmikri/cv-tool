#cv.kv

<MyBoxLayout>:
    orientation: 'vertical'

    TopNavBar:
        id: top_nav_bar
        size_hint_y: None
        height: dp(40)

    BoxLayout:
        orientation: 'horizontal'

        LeftBox:
            id: left_box
            size_hint_x: 0.1

        CenterBox:
            id: center_box
            size_hint_x: 0.7

        RightBox:
            id: right_box
            size_hint_x: 0.2

<TopNavBar>:
    orientation: 'horizontal'
    canvas.before:
        Color:
            rgba: 105/255, 105/255, 105/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: "Navigation Bar"
        font_size: '14sp'

<LeftBox>:
    orientation: 'horizontal'
    canvas.before:
        Color:
            rgba: 66/255, 73/255, 73/255, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        MyAppButton:
            text: 'Crop' #crop
        MyAppButton:
            text: 'Resize' #resize
        MyAppButton:
            text: 'Brt' #brightness
        MyAppButton:
            text: 'Sat' #saturation
        MyAppButton:
            text: 'Rot 90Â°"' #rotate 90 degrees
        MyAppButton:
            text: 'FV/FH' #flip vertically or flip horizontally 
            
    BoxLayout:
        orientation: 'vertical'
        MyAppButton:
            text: 'Open'
        MyAppButton:
            text: 'Open Dir'
        MyAppButton:
            text: 'Next'
        MyAppButton:
            text: 'Prev'
        MyAppButton:
            text: 'Save Dir'
        MyAppButton:
            text: 'Save'


<CenterBox>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 23/255, 32/255, 42/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        id: center_label
        text: "Image Preview Space"
        font_size: '14sp'

<RightBox>:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 33/255, 47/255, 61/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        id: right_label
        text: "Adjustment of Values in Space"
        font_size: '14sp'